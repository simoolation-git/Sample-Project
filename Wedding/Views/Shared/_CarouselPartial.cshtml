
<div id="zenzoyCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#zenzoyCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#zenzoyCarousel" data-slide-to="1"></li>
        <li data-target="#zenzoyCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">

        <div class="carousel-item active" id="image1">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" width="100" height="100" alt="Ask your Wedding Dilemma">
            <div class="carousel-caption"></div>

            <div class="container">
                <div class="carousel-caption">
                    <div class="carousel-header">Ask your Wedding Dilemma</div>
                    <div class="carousel-body">
                        Get Peace of Mind!
                    </div>
                    <p>
                        @if (!Request.IsAuthenticated)
                        {
                            <a class="btn btn-lg btn-success" href="javascript:void()" onclick="amplify.publish('displayLoginModalForProfilePage', 'returnUrl=@Url.Action("Index", "Profile")');" role="button">Ask Question</a>
                        }
                        else
                        {
                            <a class="btn btn-lg btn-success" href="@Url.Action("Index", "Profile")" role="button">Ask your Question</a>
                        }

                    </p>
                </div>
            </div>
        </div>

        <div class="carousel-item" id="image2">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" width="100" height="100" alt="Browse through Wedding Questions">
            <div class="carousel-caption"></div>

            <div class="container">
                <div class="carousel-caption">
                    <div class="carousel-header"><h2>Browse through Wedding Questions</h2></div>
                    <div class="carousel-body">
                        Leave us Your Insight!
                    </div>
                    <p><a class="btn btn-lg btn-success" href="#startOfPostedItems" role="button">Start Browsing</a></p>
                </div>
            </div>
        </div>

        <div class="carousel-item" id="image3">
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" width="100" height="100" alt="ZenZoy Youtube Stream">
            <div class="carousel-caption"></div>

            <div class="container">
                <div class="carousel-caption">
                    <div class="carousel-header">ZenZoy Youtube Stream</div>
                    <div class="carousel-body">
                        Coming Soon!
                    </div>
                    @*<p><a class="btn btn-lg btn-success" href="#" role="button">Search</a></p>*@
                </div>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#zenzoyCarousel" role="button" data-slide="prev">
        <span class="mdi mdi-arrow-left-bold icon-prev" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#zenzoyCarousel" role="button" data-slide="next">
        <span class="mdi mdi-arrow-right-bold icon-next" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><!-- /.carousel -->
