@model Domain.Models.ApplicationUser

@{
    ViewBag.Title = "ZenZoy Profile";
    Layout = "~/Views/Shared/_LayoutWithFooter.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/profile.css">
    <link rel="stylesheet" type="text/css" href="~/Content/crop.css">
    <link rel="stylesheet" type="text/css" href="~/Content/tag.css">
    <link rel="stylesheet" type="text/css" href="~/Content/grouperror.css">
}

<div class="row margin-top-10">
    @*<div class="col-xs-3">
            <div class="profile-pic" style="background-image: url('../Images/tux.jpg');">
            </div>
        </div>*@
    <div class="col-xs-8">
        <div class="profile-text">
            welcome
            @ViewBag.UserFirstName
        </div>
    </div>
    <div class="col-xs-4">
        <div class="setting-links">
            <a href="/settings" name="settingpage" title="Settings">
                <i class="mdi mdi-settings icon"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <hr />
    </div>
</div>

<div class="row" style="display:none">
    <div class="col-xs-12">
        <div class="add-new" data-toggle="modal" data-target="#NewPostModal" onclick="amplify.publish('openingNewPostModal');">
            <i class="mdi mdi-36px mdi-plus"></i>
            <br />
            Add New
        </div>
    </div>
</div>

@Html.Partial("_DisplayPostPartial")

@*This is the modal for creating a new post*@
@Html.Partial("_CreatePostPartial")

@section scripts {

    <script>
        window.addphotoUrl = '@Url.Action("AddPhoto", "AddPhoto", new { area = "" })';
        window.deletephotoUrl = '@Url.Action("RemovePostedItem", "AddPhoto", new { area = "" })';
        window.getPostedItemsUrl = '@Url.Action("GetPhotos", "AddPhoto", new { area = "" })';
    </script>

    <script src="~/Scripts/image-scale-master/image-scale.min.js" type="text/javascript"></script>
    <script src="~/Scripts/app/crop-component.js" type="text/javascript"></script>
    <script src="~/Scripts/app/tag-component.js" type="text/javascript"></script>
    <script src="~/Scripts/app/group-error-component.js" type="text/javascript"></script>
    <script src="~/Scripts/app/display-posted-items-controller.js" type="text/javascript"></script>
}
